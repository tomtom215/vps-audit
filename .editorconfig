# EditorConfig - https://editorconfig.org
# Ensures consistent formatting across different editors and IDEs

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_size = 4

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.md]
# Markdown uses trailing spaces for line breaks
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
